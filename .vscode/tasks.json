{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start env",
            "type": "shell",
            "command": "./up.sh",
            "options": {
                "cwd": "${workspaceFolder}/dev/docker"
            },
            "args": [],
            "problemMatcher": []
        },
        {
            "label": "Stop env",
            "type": "shell",
            "command": "./down.sh",
            "options": {
                "cwd": "${workspaceFolder}/dev/docker"
            },
            "args": [],
            "problemMatcher": []
        },
        {
            "label": "script-service",
            "type": "shell",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUST_BACKTRACE": "1",
                    "RUST_LOG": "info"
                }
            },
            "args": [
                "run",
                "--bin",
                "script-service",
                "--",
                "-dev",
                "-env",
                "${workspaceFolder}/dev/env/script-service.dev.env"
            ],
            "problemMatcher": []
        },
        {
            "label": "ws-test",
            "type": "shell",
            "command": "npm",
            "options": {
                "cwd": "${workspaceFolder}/testing/ws-client"
            },
            "args": [
                "run",
                "dev"
            ],
            "problemMatcher": []
        }
    ]
}